<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="10dp"
    android:background="@drawable/shares_backs"
    >
        <ImageView
            android:id="@+id/iv_near_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/bac" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_near_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="name" />

            <TextView
                android:id="@+id/tv_naer_title"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="37dp"
                android:layout_marginLeft="15dp"
                android:text="title" />

            <TextView
                android:id="@+id/tv_near_juli"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/tv_re_name"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="80dp"
                android:text="Km"
                android:layout_alignLeft="@+id/tv_re_name" />

            <ImageView
                android:id="@+id/iv_near_guanzhu"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_below="@+id/tv_re_name"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="71dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/guanzhu" />

        </RelativeLayout>



    </LinearLayout>
