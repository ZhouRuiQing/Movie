<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:gravity="center"
    >

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/simp_xView"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        android:textSize="25sp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="190dp"
        android:id="@+id/text_biaoaction"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="类型："
        android:textSize="15sp"
        android:id="@+id/text_leiaction"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="190dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="导演："
        android:textSize="15sp"
        android:id="@+id/text_daoaction"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="190dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="时长："
        android:textSize="15sp"
        android:id="@+id/text_timeaction"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="190dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="产地："
        android:textSize="15sp"
        android:id="@+id/text_addressaction"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="190dp"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="剧情简介"
        android:textSize="20sp"
        android:layout_marginTop="210dp"
        android:layout_marginLeft="30dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XXXX"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/text_jianjie"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"

        android:layout_marginTop="380dp"
        android:text="演职人员"
        android:textSize="20sp" />

    <Button
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:background="#F2953D"
        android:text="演员名字"
        android:textColor="#ffffff"
        android:layout_marginTop="420dp"
        android:layout_marginLeft="30dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XXXXXX"
        android:id="@+id/text_nameaction"
        android:layout_marginTop="490dp"
        android:layout_marginLeft="30dp"
        />
</RelativeLayout>
